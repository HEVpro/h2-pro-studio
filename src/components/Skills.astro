---
import { Card, CardContent } from "@/components/ui/card";
import { Figma, Framer, Zap, Image, PenTool, FileCode } from 'lucide-react';
---

<section id="skills" class="py-20 bg-secondary/10">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center text-primary">My skills and knowledge</h2>
    <div class="grid grid-cols-3 md:grid-cols-6 gap-8">
      <Card>
        <CardContent class="flex flex-col items-center justify-center p-4">
          <Figma class="w-12 h-12 text-primary mb-2" />
          <span class="text-sm">Figma</span>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="flex flex-col items-center justify-center p-4">
          <Framer class="w-12 h-12 text-primary mb-2" />
          <span class="text-sm">Framer</span>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="flex flex-col items-center justify-center p-4">
          <Zap class="w-12 h-12 text-primary mb-2" />
          <span class="text-sm">Webflow</span>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="flex flex-col items-center justify-center p-4">
          <Image class="w-12 h-12 text-primary mb-2" />
          <span class="text-sm">Photoshop</span>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="flex flex-col items-center justify-center p-4">
          <PenTool class="w-12 h-12 text-primary mb-2" />
          <span class="text-sm">Illustrator</span>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="flex flex-col items-center justify-center p-4">
          <FileCode class="w-12 h-12 text-primary mb-2" />
          <span class="text-sm">HTML/CSS</span>
        </CardContent>
      </Card>
    </div>
  </div>
</section>